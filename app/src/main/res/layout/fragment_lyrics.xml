<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.mkash32.lyricfinder.activities.LyricsFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title"
        android:textSize="30sp"
        android:elevation="6dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:gravity="left"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:shadowDx="2"
        android:shadowDy="2"
        android:layout_marginBottom="10dp"
        android:shadowRadius="3"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_artist"
        android:layout_marginBottom="96dp"
        android:layout_below="@id/tv_title"
        android:layout_marginLeft="40dp"
        android:textSize="26sp"
        android:textColor="#000000"
        android:gravity="left"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowColor="#000000"
        android:shadowRadius="2"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:id="@+id/tv_divider"
        android:background="@drawable/divider"
        android:layout_below="@id/tv_artist"/>

    <ImageView
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:id="@+id/artist_image"
        android:scaleType="fitXY"
        android:padding="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@id/tv_artist"
        android:layout_above="@id/tv_divider"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:fontFamily="sans-serif"
        android:layout_centerHorizontal="true"
        android:maxLines="100"
        android:scrollbars="vertical"
        android:layout_below="@id/tv_divider"
        android:textStyle="normal"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowColor="#000000"
        android:shadowRadius="2"
        android:padding="10dp"
        android:id="@+id/tv_lyrics" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/adUnitId">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
